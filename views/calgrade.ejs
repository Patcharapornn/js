                <option value="">กรุณาเลือกเทอม</option>
                <option value="1">1</option>
                <option value="2">2</option>
                </select> <br><br><br>

                    

               

          
            <% for (var i = 1; i <= 7;  i++ ) { %>


                <select id="subj"  name ="namesubject<%= i %>">
                    <option value="">กรุณาเลือกวิชา</option>
                    <option value="060243110 JAVASCRIPT PROGRAMMING">"060243110 JAVASCRIPT PROGRAMMING"</option>
                    <option value="060243111 SOFTWARE ENGINEERING">" 060243111 SOFTWARE ENGINEERING"</option>
                    <option value="060243112 SYSTEM ANALYSIS AND DESIGN"> "060243112 SYSTEM ANALYSIS AND DESIGN">
                    <option value="060243113  WEB PROGRAMMING">"060243113  WEB PROGRAMMING">
                    <option value="061100001  DESIGN THINKING"> "061100001  DESIGN THINKING">
                        <option value="080103034  ENGLISH CONVERSATION"> "080103034  ENGLISH CONVERSATION"</option>
                    </select>
               

                    <select id="grade" name ="grade<%= i%>">
                        <option value="">กรุณาเลือกเกรด</option>
                        <option value=4>A</option>
                        <option value=3.5>B+</option>
                        <option value=3> B</option>
                        <option value=2.5>C+</option>
                        <option value=2> C</option>
                            <option value=1.5> D</option>
                            <option value=1> D</option>
                            <option value=0> F</option>
                        </select>

                        <select id="unit" name ="unit<%= i%>">
                            <option value="">กรุณาเลือกหน่วยกิต</option>
                            <option value=1>1</option>
                            <option value=1.5>1.5</option>
                            <option value=2> 2>
                            <option value=2.5>2.5>
                            <option value=3> 3>
                                
                            </select>
                   
           
            <% } %>
            <br>
            <input type="submit" value="คำนวณ" />
        </form>
         
<br>
            
   
    
   
    
            
           


            

            

           
            

            
            

        

            
         


        

</div>





<script>

function calgrade(){
    var term1 = document.getElementById('t1').value;
    var term2 = document.getElementById('t2').value;
    var term3 = document.getElementById('t3').value;
    var term4 = document.getElementById('t4').value;

   
    var u4 = document.getElementById('t44').value;



    
   
    check(t1)

    if(t1>0){
        var cal1 = ( term1 * u1) + (term2 * u2) + (term3 * u3) + (term4 * u4);
        var unit1 = (u1 + u2 + u3 + u4);

        var  total = (cal1 / unit1);

       
    document.getElementById("result").innerHTML = "เกรดเฉลี่ย 4  เทอมของคุณ คือ : "  + total ;
    
    }
   
}
function check(t1){
    let str_msg =""
    if(t1 =="" ||t1==undefined||t1==null){
        str_msg = str_msg + "กรุณากรอกข้อมูลให้ครบ";
    }
  
    
    

if (str_msg != ""){
    alert(str_msg);

}
}
</script>

</body>
</html>